{
    "env": {
        "browser": true,
        "es2022": true,
        "jest": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "complexity": [
            "error",
            5
        ],
        "computed-property-spacing": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "error",
            100,
            2
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 0,
                "maxBOF": 0
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-const": 1,
        "quotes": [
            "error",
            "double",
            "avoid-escape"
        ],
        "react/function-component-definition": [
            "error",
            {
                "namedComponents": "arrow-function",
                "unnamedComponents": "arrow-function"
            }
        ],
        "react/jsx-curly-spacing": [
            "error",
            "always"
        ],
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "space-in-parens": [
            "error",
            "always"
        ],
        "template-curly-spacing": [
            "error",
            "always"
        ]
    }
}